{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		
		// modules
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",

		// input and output
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,

		// libraries
		"lib": [
			"esnext",
			"ES2022",
			"DOM",
			"DOM.Iterable",
			"ES5",
			"ES6"
		],

		// types
		"sourceMap": false,
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": false,

		// incremental
		"incremental": true,
		"tsBuildInfoFile": "build/.tsbuildinfo",
		"composite": true,
		"noEmit": false
	},
	"include": [
		"./src",
		"./src/global.d.ts"
	],
	"exclude": [
		"./build",
		"./src/apps/app-template",
		"./src/apps/types",
		"./src/lib/external/browserfs.*"
	],
	"watchOptions": {
		"watchFile": "useFsEvents",
		"watchDirectory": "useFsEvents",
		"fallbackPolling": "dynamicPriority",
		"synchronousWatchDirectory": true,
		"excludeDirectories": [
			"**/node_modules",
			"./build",
			"./src/apps/app-template/constellation.d.ts",
			"./src/apps/types/constellation.d.ts"
		]
	}
}